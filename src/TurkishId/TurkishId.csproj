<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Turkish ID Number Validation Library</Description>
    <Copyright>Copyright © Sedat Kapanoglu 2014-2018</Copyright>
    <VersionPrefix>3.0</VersionPrefix>
    <Authors>Sedat Kapanoglu</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>TurkishId</AssemblyName>
    <PackageId>TurkishId</PackageId>
    <PackageTags>turkish id;verification;tc kimlik;tckimlik</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/ssg/TurkishId</RepositoryUrl>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <PackageLicense>Apache-2.0</PackageLicense>
    <PackageProjectUrl>https://github.com/ssg/TurkishId</PackageProjectUrl>
    <PackageTags>turkish id verification tc kimlik tckimlik</PackageTags>
    <PackageReleaseNotes><![CDATA[
- Remove null checks
    ]]></PackageReleaseNotes>
    <LangVersion>8.0</LangVersion>
    <NullableContextOptions>enable</NullableContextOptions>
    <CodeAnalysisRuleSet>..\..\SSG.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>TurkishId.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="stylecop.json" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>
</Project>
